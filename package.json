{
  "name": "stylelint-plugin-rhythmguard",
  "version": "1.4.1",
  "description": "Stylelint plugin for spacing scale, token enforcement, and Tailwind class-string governance",
  "keywords": [
    "stylelint",
    "stylelint-plugin",
    "css",
    "design-system",
    "design-tokens",
    "spacing-scale",
    "spacing",
    "linting",
    "tailwindcss",
    "eslint-plugin",
    "logical-css"
  ],
  "type": "commonjs",
  "main": "src/index.js",
  "exports": {
    ".": {
      "require": "./src/index.js",
      "import": "./src/index.mjs"
    },
    "./configs/recommended": {
      "require": "./src/configs/recommended.js",
      "import": "./src/configs/recommended.mjs"
    },
    "./configs/strict": {
      "require": "./src/configs/strict.js",
      "import": "./src/configs/strict.mjs"
    },
    "./configs/tailwind": {
      "require": "./src/configs/tailwind.js",
      "import": "./src/configs/tailwind.mjs"
    },
    "./configs/expanded": {
      "require": "./src/configs/expanded.js",
      "import": "./src/configs/expanded.mjs"
    },
    "./configs/logical": {
      "require": "./src/configs/logical.js",
      "import": "./src/configs/logical.mjs"
    },
    "./configs/migration": {
      "require": "./src/configs/migration.js",
      "import": "./src/configs/migration.mjs"
    },
    "./presets": {
      "require": "./src/presets/index.js",
      "import": "./src/presets/index.mjs"
    },
    "./rules/use-scale": {
      "require": "./src/rules/use-scale/index.js",
      "import": "./src/rules/use-scale/index.mjs"
    },
    "./rules/prefer-token": {
      "require": "./src/rules/prefer-token/index.js",
      "import": "./src/rules/prefer-token/index.mjs"
    },
    "./rules/no-offscale-transform": {
      "require": "./src/rules/no-offscale-transform/index.js",
      "import": "./src/rules/no-offscale-transform/index.mjs"
    },
    "./eslint": {
      "require": "./src/eslint/index.js",
      "import": "./src/eslint/index.mjs"
    }
  },
  "files": [
    "assets",
    "scales",
    "schemas",
    "src",
    "README.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "SECURITY.md",
    "LICENSE"
  ],
  "scripts": {
    "bench:perf": "node scripts/bench/compare.mjs",
    "bench:perf:fix": "node scripts/bench/compare.mjs --fix",
    "lint": "eslint .",
    "scales:add": "node scripts/scales/add-scale.mjs",
    "scales:validate": "node scripts/scales/validate-community-scales.mjs",
    "test:pack-smoke": "node scripts/ci/pack-smoke.mjs",
    "test:npm-smoke": "node scripts/ci/npm-registry-smoke.mjs --package stylelint-plugin-rhythmguard --version latest",
    "test": "node --test test/*.test.js",
    "test:compat-floor": "node --test test/floor-compat.test.js",
    "test:watch": "node --test --watch test/*.test.js",
    "test:coverage": "c8 --reporter=text --reporter=lcov node --test test/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/petrilahdelma/stylelint-plugin-rhythmguard.git"
  },
  "homepage": "https://github.com/petrilahdelma/stylelint-plugin-rhythmguard#readme",
  "bugs": {
    "url": "https://github.com/petrilahdelma/stylelint-plugin-rhythmguard/issues",
    "email": "hello@petrilahdelma.com"
  },
  "peerDependencies": {
    "stylelint": "^16.0.0 || ^17.0.0"
  },
  "dependencies": {
    "known-css-properties": "^0.37.0",
    "stylelint-config-tailwindcss": "^1.0.1",
    "stylelint-plugin-logical-css": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "c8": "^10.1.3",
    "eslint": "^9.22.0",
    "geist": "^1.7.0",
    "postcss-value-parser": "^4.2.0",
    "stylelint": "^16.15.0",
    "stylelint-scales": "^5.0.0",
    "stylelint-plugin-logical-css": "^2.0.2"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
